<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dzr.quantization.mapper.PlateHeatMapper">
  <resultMap id="BaseResultMap" type="dzr.quantization.entity.PlateHeat">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="plate_score" jdbcType="DOUBLE" property="PlateScore" />
    <result column="guba_score" jdbcType="DOUBLE" property="GubaScore" />
    <result column="time" jdbcType="TIMESTAMP" property="time" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, plate_score, guba_score, time
  </sql>

  <select id="selectAll"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from quantization.plate_heat
  </select>

  <insert id="insert" parameterType="dzr.quantization.entity.PlateHeat">
    insert ignore into quantization.plate_heat
    (name, plate_score, guba_score, time)
    values
      (#{name},#{PlateScore},#{GubaScore},#{time})
  </insert>

</mapper>
